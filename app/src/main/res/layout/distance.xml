<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/source_point"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/btnSrc"
        />

    <Button
        android:id="@+id/btnSrc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:text="@string/choose_source_point"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:text="@string/dest_point"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDst"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignStart="@+id/btnSrc"
        android:layout_alignEnd="@+id/btnSrc"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="@string/choose_dest_point"
        android:textAlignment="textStart"
        android:textSize="15sp"
        android:textAllCaps="false"/>

</RelativeLayout>